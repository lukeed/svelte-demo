{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2018"],
    "alwaysStrict": true,
    "module": "esnext",
    "noEmit": true
  },
  "include": [
    "bin",
    "src"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
